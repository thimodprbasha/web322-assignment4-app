<div class="row">
  <div class="col-md-12">
    <h2>Posts <a href="/posts/add" class="btn btn-success pull-right">Add Post</a></h2>
    <hr />
    <div class="table-responsive">
      <table class="table">

        <thead>
          <tr>
            <th scope="col">Post&nbsp;ID</th>
            <th scope="col">Title</th>
            <th scope="col">Post&nbsp;Date</th>
            <th scope="col">Category</th>
            <th scope="col">Published</th>
          </tr>
        </thead>
        <tbody>
          {{#each posts}}
            <tr>
              <th scope="row">{{id}}</td>
              {{!-- <td>{{body}}</td> --}}
              <td>{{title}}</td>
              <td>{{postDate}}</td>
              <td><a href={{#concat "/posts?category=" category}}  {{/concat}}>{{category}}</a></td>
              <td>{{published}}</td>
<td><a class="btn btn-danger" href="/posts/delete/{{id}}">remove</a></td>
                    </tr>
            </tr>
          {{/each}}
        </tbody>

      </table>

    </div>
    <div class="col-md-12 text-center">
<strong>{{message}}</strong>
</div>
  </div>
</div>