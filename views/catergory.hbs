<div class="row">
  <div class="col-md-12">
    <h2>Categories <a href="/categories/add" class="btn btn-success pull-right">Add Category</a></h2>
    <hr />
     <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Category ID</th>
            <th scope="col">Category Name</th>
          </tr>
        </thead>
        <tbody>
          {{#each categories}}
            <tr>
              <th scope="row">{{id}}</td>
              <td><a href={{#concat "/posts?category=" id}}  {{/concat}}>{{category}}</a></td>
              <td><a class="btn btn-danger" href="/categories/delete/{{id}}">remove</a></td>
            </tr>
          {{/each}}
        </tbody>

      </table>
  </div>
  <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
 </div>
</div>